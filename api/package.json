{
  "name": "api",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:e2e:cov": "CLICKHOUSE_DATABASE=staminads_test jest --config ./test/jest-e2e.json --runInBand --coverage",
    "coverage:merge": "mkdir -p .nyc_output && cp coverage-unit/coverage-final.json .nyc_output/unit.json && cp coverage-e2e/coverage-final.json .nyc_output/e2e.json && nyc report --reporter=lcov --reporter=text --report-dir=coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "CLICKHOUSE_DATABASE=staminads_test jest --config ./test/jest-e2e.json --runInBand",
    "openapi:generate": "nest build && npx esbuild scripts/generate-openapi.ts --outfile=dist/scripts/generate-openapi.js --platform=node --format=cjs --bundle \"--external:@nestjs/*\" \"--external:../app.module.js\" --external:class-validator --external:class-transformer --external:yaml --external:reflect-metadata && node dist/scripts/generate-openapi.js",
    "build:full": "npm run build && cp -r ../console/dist ./dist/public"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@clickhouse/client": "^1.15.0",
    "@maxmind/geoip2-node": "^6.3.4",
    "@nestjs/cache-manager": "^3.1.0",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/event-emitter": "^3.0.1",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/schedule": "^6.1.0",
    "@nestjs/serve-static": "^5.0.4",
    "@nestjs/swagger": "^11.2.3",
    "@nestjs/throttler": "^6.5.0",
    "@tanstack/react-query": "^5.90.13",
    "@types/passport-http-bearer": "^1.0.42",
    "async-mutex": "^0.5.0",
    "bcrypt": "^6.0.0",
    "cache-manager": "^7.2.7",
    "cheerio": "^1.1.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "dayjs": "^1.11.19",
    "mjml": "^4.18.0",
    "nanoid": "^5.1.6",
    "nodemailer": "^7.0.12",
    "passport": "^0.7.0",
    "passport-http-bearer": "^1.0.1",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "sharp": "^0.34.5"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/bcrypt": "^6.0.0",
    "@types/cache-manager": "^4.0.6",
    "@types/cheerio": "^0.22.35",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/mjml": "^4.7.4",
    "@types/node": "^22.10.7",
    "@types/nodemailer": "^7.0.4",
    "@types/passport-jwt": "^4.0.1",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "nyc": "^17.1.0",
    "prettier": "^3.4.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0",
    "yaml": "^2.8.2"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s",
      "!**/*.module.ts",
      "!**/*.dto.ts",
      "!**/*.entity.ts",
      "!**/*.spec.ts",
      "!**/main.ts",
      "!**/index.ts"
    ],
    "coverageDirectory": "../coverage-unit",
    "coverageReporters": [
      "json",
      "lcov",
      "text"
    ],
    "testEnvironment": "node"
  }
}
