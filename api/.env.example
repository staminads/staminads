JWT_SECRET=your-secret-key-change-in-production
JWT_EXPIRES_IN=7d
PORT=3000

# Serer URL for email links (password reset, invitations)
APP_URL=http://localhost:5173

# CORS: Comma-separated allowed origins for console endpoints
# Track endpoints (/api/track*) always allow all origins for SDK
# Default: * (allow all origins)
CORS_ALLOWED_ORIGINS=http://localhost:5173

# Demo fixtures generation (optional)
DEMO_SECRET=your-demo-secret-change-in-production

# Demo mode - set to true to disable write operations (workspace create, API key create, etc.)
IS_DEMO=false

# ClickHouse
CLICKHOUSE_HOST=http://localhost:8123
CLICKHOUSE_SYSTEM_DATABASE=staminads_system
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=

# Custom Dimensions Cache (optional)
CUSTOM_DIMENSIONS_CACHE_TTL_MS=15000

# Geo Location (optional)
# Path to MaxMind GeoLite2-City.mmdb database
# Download from: https://dev.maxmind.com/geoip/geolite2-free-geolocation-data
GEOIP_DB_PATH=./data/GeoLite2-City.mmdb

# Encryption key for sensitive data (REQUIRED)
# Must be at least 32 characters. Generate with: openssl rand -hex 32
ENCRYPTION_KEY=

# Global SMTP settings (optional)
# If not set, workspace-level SMTP must be configured to send emails
SMTP_HOST=
SMTP_PORT=587
SMTP_TLS=true
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_NAME=Staminads
SMTP_FROM_EMAIL=noreply@example.com
